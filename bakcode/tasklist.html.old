{/capture name="body"/}
<style type="text/css">
.filter-order{width: 1200px; margin-top: 10px;}
#tasktab{margin:10px 0px;width: 1200px;}
input[type="text"]{width:140px;margin-bottom: 0;}
select{width:100px; margin-bottom: 0;margin-right:8px;font-size:12px;}
#selpr,#isclose{width:70px;font-size:12px;height:auto;}
.sort{margin-left:5px;}
#tasksearch{font-size:14px;margin-bottom:0px;}
#tasksearch_common{padding:10px;width:930px;}
.tasksearch_common{box-shadow:0px -4px 4px rgba(0, 0, 0, 0.2);border-bottom:none;}
#tasksearch_common .btn,#showadv{margin-left:10px;}
#taskadvsearch_out{position:relative;}
#taskadvsearch{display:none;position:absolute;width:930px;margin-top:0px;overflow:auto;background: none repeat scroll 0 0 #FFFFFF;box-shadow: 0 4px 4px rgba(0, 0, 0, 0.2),0 2px 0px rgba(0, 0, 0, 0.2);border-top:none;padding:10px;}
#hideadv{margin-left:10px;}
.sorted{color: #FF6600;}
.pointer{cursor: pointer;}
.addservice_top{ background: none repeat scroll 0 0 #FFA200; color: #FFFFFF; font-size: 12px;font-style: normal; line-height: 22px; padding: 1px 4px;} 
#configset{text-align:center;cursor:pointer;width:32px;float: left;}
.configset{border: 1px solid rgba(0, 0, 0, 0.2);border-bottom:none;}
#configset_out{position:absolute;display: none;}
{/if $smarty.get.type eq 4/}
#configset_inner{position:absolute;top:21px;left:-165px;width:240px;background-color:#FFFFFF;border: 1px solid rgba(0, 0, 0, 0.2); border-top:none;}
{/else/}
#configset_inner{position:absolute;top:21px;left:-208px;width:240px;background-color:#FFFFFF;border: 1px solid rgba(0, 0, 0, 0.2); border-top:none;}
{//if/}
#configset_inner div{ overflow:hidden;}
#configset_inner .configset_inner_title{float:left;border-top: 1px solid rgba(0, 0, 0, 0.2);width:198px; padding:10px 0 0 10px;}
#configset_inner .close{float:left; padding:10px 0 0 10px;}
#configset_inner label{font-size: 12px;float:left;margin-left:10px;width:80px;}
#configset_inner .split{ clear:both; border-bottom:1px dashed #ccc; margin:10px 0;}
.sort i{background:url("/assets/img/sort.png");background-repeat:no-repeat; width:7px;height:8px;display: inline-block;}
i.sort-up{background-position:0px 0px; }
i.sort-down{background-position:0px -20px;}
.sorted .sort i.sort-up{background-position:0px -40px; }
.sorted .sort i.sort-down{background-position:0px -60px;}
.thead{position: fixed; background-color:#F3F3F3;top:55px;display: none;border-bottom-color: #CCCCCC;border-top-color: #DDDDDD; box-shadow: 0 1px 5px rgba(0, 0, 0, 0.1);}
.thead table{margin-bottom:0px;}
#list{max-width:inherit;margin-top: 20px;}
#list th{
    background-color: #e4e4e4;
    line-height: 33px;
    padding-top: 0;
    padding-bottom: 0;
}
#list th,#list td{white-space:nowrap;border: 1px solid #d7d7d7;}
.mk-topspc{
    margin-top: 20px;
}
.special,.vip,.agent,.fair-employ{ display:inline-block;height: 20px;width: 20px;margin-right: 5px;vertical-align: bottom;}
.special {background: url("http://t5.zbjimg.com/r/page/li-ico.png?a=1005") no-repeat scroll 0 -88px transparent;}
.vip {background: url("/assets/img/vip.jpg") no-repeat scroll 0 0 transparent;}
.agent {background: url("/assets/img/agent.png") no-repeat scroll 0 0 transparent;}
.fair-employ {background: url("/assets/img/fair_logo.png") no-repeat scroll 0 0 transparent;}
.waithosted{clear:both;overflow: hidden;margin-left:10px;}
.waithosted dl{float: left;margin-top:0;margin-bottom: 8px;width:100%;}
.waithosted dt{font-weight:bold;}
.waithosted dt,.waithosted dd{float: left;}
.waithosted dd a{color:#666666;}
.waithosted a.active{color:#0088CC;font-weight:bold;}
.waithosted .error{color: #990000;}
.teamseatab{margin-left: 30px;}
.follow_day{color: #CCCCCC;}
.view{float:left;}
.view img{width:20px;height: 20px;cursor: pointer;}
.red{color: #FF0000;}
.orange{color: #FF8A00;}
.bold{font-weight: bold;}
.tip {background-color: #D9EDF7;border-color: #BCE8F1; border-radius: 4px 4px 4px 4px; color: #3A87AD; margin-bottom: 18px; padding: 8px 35px 8px 14px; text-shadow: 0 1px 0 rgba(255, 255, 255, 0.5); clear: both; font-family: "Helvetica Neue",Helvetica,Arial,sans-serif;font-size: 12px;line-height: 20px;}
h4 a{font-size:12px;}
.waithosted dd a.active2{color: #FFFFFF;background-color: #3A87AD;border-radius: 3px 3px 3px 3px;display: inline-block;font-weight: bold;line-height: 14px;padding: 2px 4px;text-shadow: 0 -1px 0 rgba(0, 0, 0, 0.25);vertical-align: baseline;white-space: nowrap;}
#tasksearch_common .sitem{display: inline-block; }
#taskadvsearch .sitem{width: 430px;height:30px;float: left;margin-right: 10px;margin-bottom: 10px;}
</style>
<div class="thead">
	<table class="table transaction-table">
		<thead>
		{/foreach from=$fields key=key item=field/}
		<th class="{/if $field.allowsort eq 1/}pointer{//if/}{/if $smarty.get.o eq $key/} sorted{//if/}" sortby="{/$key/}">{/$field.name/}
		{/if $field.allowsort eq 1/}
		<span class="sort"><i class="{/if $smarty.get.o eq $key and $smarty.get.ud eq 1/}sort-down{/else/}sort-up{//if/}"></i></span>
		{//if/}
		</th>
		{//foreach/}
		<th></th>
		</thead>
	</table>
</div>
<div class="pull-left">
	<h3>
		{/$title/}
	</h3>
</div>
<div class="clear">&nbsp;</div>
<!-- 待受理 -->
<form id="tasksearch" class="form-inline" action="/wjtask/tasklist">
<div id="tasksearch_common">
    <div>
        {/include file="wjtask/manager.html"/}
        {/include file="wjtask/sct.html"/}
        <a id="showadv" href="javascript:void(0);">高级</a>
        <input type="submit" value="筛选" class="btn normal-submit">
    </div>
    {/include file="wjtask/inc/search-filter.html"/}
</div>
<ul class="nav nav-tabs" id="tasktab" style="font-size:12px">
	<li ><a href="/wjtask/taskcase" type="0">任务面板</a></li>
	{/foreach from=$types key=key item=item/}
	<li class="{/if $key eq $smarty.get.type/}active{//if/}{/if $key eq 1/} teamseatab{//if/}{/if $key eq 9/} centerseatab{//if/}">
		<a href="/wjtask/tasklist" type="{/$key/}">{/$item/}</a>
	</li>
	{//foreach/}
	<li><a href="/wjtask/giveUpList?state=-1" type="0">放弃库</a></li>
	<li class="teamseatab"><a href="/wjtask/auditrefund?audit_state=-1" type="0">关闭库</a></li>
    <li ><a href="/wjtask/tongji?uid={/$smarty.get.uid/}&own={/$smarty.get.own/}" type="0">统计台</a></li>
    <li><a href="/wjtask/PubReasonList?state=-2" type="0">B类派单的需求</a></li>
	<li><a href="/wjtask/PubReasonList?state=-2" type="10">直接公开的需求</a></li>

</ul>
<!-- 筛选区 -->
<div class="clear">&nbsp;</div>
<div class="filter-order">
    {/if $smarty.get.type eq 1/}
    <span class="filter-select-warp">
        任务状态：
        <select name="taskstate" class="filter-order-select">
            <option value="0">所有</option>
            <option value="2" {/if $smarty.get.taskstate eq 2/}selected{//if/}>已发布</option>
            <option value="1" {/if $smarty.get.taskstate eq 1/}selected{//if/}>未发布</option>
        </select>
    </span>
    {//if/}
    <span class="filter-select-warp">
        TOP订单：
        <select name="top_order_tag" class="filter-order-select">
            <option value="0">所有</option>
            <option value="2" {/if $smarty.get.top_order_tag eq 2/}selected{//if/}>是</option>
            <option value="1" {/if $smarty.get.top_order_tag eq 1/}selected{//if/}>否</option>
        </select>
    </span>
    <span class="filter-select-warp">
        2是否商机订单：
        <select name="task_source" class="filter-order-select">
            <option value="0">所有</option>
            <option value="1" {/if $smarty.get.task_source eq 1/}selected{//if/}>是</option>
            <option value="2" {/if $smarty.get.task_source eq 2/}selected{//if/}>否</option>
        </select>
    </span>
    {/if $smarty.get.type eq 1 or $smarty.get.type eq 3/}
    <span class="filter-select-warp">
        派单类型：
        <select name="recstatus" class="filter-order-select">
            <option value="0">所有</option>
            <option value="1" {/if $smarty.get.recstatus eq 1/}selected{//if/}>派单中</option>
            <option value="2" {/if $smarty.get.recstatus eq 2/}selected{//if/}>已派单</option>
            <option value="3" {/if $smarty.get.recstatus eq 3/}selected{//if/}>未派单</option>
        </select>
    </span>
    {//if/}
    <input type="hidden" name="type" value="{/$smarty.get.type/}">
    <input type="hidden" name="own" value="{/$smarty.get.own/}">
    <input type="hidden" name="o" value="{/$smarty.get.o/}">
    <input type="hidden" name="ud" value="{/$smarty.get.ud/}">
    <input type="hidden" name="amount" value="0">
    <input type="hidden" name="pa" value="-2">
    <input type="hidden" name="isclose" value="0">
    <input type="hidden" name="closereason" value="-1">
    <input type="hidden" name="refundreason" value="-1">
    <input type="hidden" name="isext" value="0">
    <input type="hidden" name="seday" value="0">
    <input type="hidden" name="sstate" value="0">
    <input type="hidden" name="smode" value="0">
    <input type="hidden" name="etype" value="0">
    <input type="hidden" name="olevel" value="0">
    <input type="hidden" name="mode" value="0">
    <input type="hidden" name="isfollow" value="0">
    <input type="hidden" name="source" value="0">
    <input type="hidden" name="etime" value="0">
    <input type="hidden" name="fstatus" value="">
    <input type="hidden" name="estatus" value="100">
    <input type="hidden" name="otype" value="0">
    <input type="hidden" name="ostatus" value="0">
    <input type="hidden" name="atype" value="0">
    <input type="hidden" name="htype" value="0">
    <input type="hidden" name="v" value="0">
    <input type="hidden" name="cuh" value="0">
    <input type="hidden" name="isdelay" value="0">
    <input type="hidden" name="atk" value="0">
    <input type="hidden" name="nt" value="0">
    <input type="hidden" name="zjtk" value="0">
    <input type="hidden" name="fullzjtk" value="0">
    <input type="hidden" name="fwarn" value="0">
    <input type="hidden" name="ewarn" value="0">
    <input type="hidden" name="inseatime" value="0">
    <input type="hidden" name="isyun" value="0">
    <input type="hidden" name="nallot" value="0">
    <input type="hidden" name="expriestimes" value="0">
    <input type="hidden" name="gstatus" value="0">
</div>
</form>
<!--警示框-->
    <div class="alert mk-topspc">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        Tips ！  A类派单：顾问完善梳理后的需求进行派单； B类派单：顾问直接公开的需求进行派单； C类派单：审核人员审核后的需求进行派单；
    </div>
<!-- 列表 -->
<table id="list" class="table transaction-table">
	<thead>
		<tr>
			{/foreach from=$fields key=key item=field/}
			<th><span class="{/if $field.allowsort eq 1/}pointer{//if/}{/if $smarty.get.o eq $key/} sorted{//if/}" sortby="{/$key/}">
                {/$field.name/}
				{/if $field.allowsort eq 1/}
				<span class="sort"><i class="{/if $smarty.get.o eq $key and $smarty.get.ud eq 1/}sort-down{/else/}sort-up{//if/}"></i></span>
				{//if/}</span>
				<div class="filter">
					{/if $key eq 'amount'/}
					<select id="sel_amount">
						<option value="0">全部</option>
						<option value="1">=0</option>
						<option value="2">0<赏金≤500</option>
						<option value="3">500<赏金≤1000</option>
						<option value="4">1000<赏金≤5000</option>
						<option value="5">5000<赏金≤10000</option>
						<option value="6">10000＜赏金≤50000</option>
						<option value="7">≥50000</option>
					</select>
					{/elseif $key eq 'pub_isorder'/}
					<select id="sel_pa">
						<option value="-2">全部</option>
						<option value="0">未设置</option>
						<option value="90">高</option>
						<option value="50">中</option>
						<option value="10">低</option>
						<option value="-1">放弃</option>
					</select>
					{/elseif $key eq 'open_state'/}
					<select id="sel_isclose">
						<option value="-1">全部</option>
						<option value="0" selected="selected">正常</option>
						<option value="1">关闭</option>
					</select>
					{/elseif $key eq 'refused'/}
					<select id="sel_closereason">
						<option value="-1">全部</option>
						{/html_options options=$refused_reason/}
					</select>
					{/elseif $key eq 'refund_option'/}
					<select id="sel_refundreason">
						<option value="-1">全部</option>
						{/html_options options=$refund_option_reason/}
					</select>
					{/elseif $key eq 'ext_num'/}
					<select id="sel_isext">
						<option value="0">全部</option>
						<option value="1">正常投标</option>
						<option value="2">延期投标</option>
					</select>
					{/elseif $key eq 'ext_selectime'/}
					<select id="sel_seday">
						<option value="0">全部</option>
						{/foreach from=range(1,7) item=day/}
						<option value="{/$day/}">选标期第{/$day/}天</option>
						{//foreach/}
						<option value="-1">超期</option>
					</select>
					{/elseif $key eq 'endtime' and $smarty.get.type eq 5/}
					<select id="sel_etime">
						<option value="0">全部</option>
						{/foreach from=range(1,3) item=day/}
						<option value="{/$day/}">剩{/$day/}天截止</option>
						{//foreach/}
						<option value="-1">其它</option>
					</select>
					{/elseif $key eq 'select_state'/}
					<select id="sel_sstate">
						<option value="0">全部</option>
						<option value="1">正常待选标</option>
						<option value="2">超期待选标</option>
						<option value="3">社会化选标中</option>
						<option value="4">作弊成立待选标</option>
					</select>
					{/elseif $key eq 'is_sysselect'/}
					<select id="sel_smode">
						<option value="0">全部</option>
						<option value="1">正常选标</option>
						<option value="2">超期选标</option>
						<option value="3">社会化选标</option>
					</select>
					{/elseif $key eq 'end_type'/}
					<select id="sel_etype">
						<option value="0">全部</option>
						<option value="1">正常交易成功</option>
						<option value="2">投标延期后交易成功</option>
						<option value="3">社会化选标完成</option>
						<option value="4">免费需求完成</option>
						<option value="5">退款</option>
						<option value="6">结束需求</option>
						<option value="7">取消交易</option>
					</select>
					{/elseif $key eq 'oldlevel'/}
					<select id="sel_olevel">
						<option value="0">全部</option>
						{/html_options options=$levels/}
					</select>
					{/elseif $key eq 'mode'/}
					<select id="sel_mode">
						<option value="0">全部</option>
						<option value="1">比稿(单人)</option>
						<option value="2">比稿(多人)</option>
						<option value="3">计件</option>
						<option value="4">服务</option>
						<option value="5">雇佣</option>
						<option value="6">招标</option>
					</select>
					{/elseif $key eq 'is_follow'/}
					<select id="sel_isfollow" style="display: none;">
						<option value="0">全部</option>
						<option value="1">新订单</option>
						<option value="2">已跟进</option>
					</select>
					{/elseif $key eq 'phone_type'/}
					<select id="sel_source">
						<option value="0">全部</option>
						<option value="1">WEB端</option>
						<option value="2">android端</option>
						<option value="3">ios端</option>
						<option value="4">win8端</option>
					</select>
                    {/elseif $key eq 'expriestime'/}
                    <select id="sel_expriestimes">
                        <option value="0">全部</option>
                        <option value="1">今天</option>
                        <option value="2">明天</option>
                        <option value="3">后天</option>
                        <option value="4">近三天</option>
                        <option value="5">近7天</option>
                        <option value="6">已超期</option>
                    </select>
                    {/elseif $key eq 'giveup_status'/}
                    <select id="sel_gstatus">
                        <option value="0">所有</option>
                        <option value="1">正常</option>
                        <option value="2">已放弃</option>
                    </select>
					{//if/}
				</div>
			</th>
			{//foreach/}
            {/if $smarty.get.type eq 8/}
            <th>操作
                <div style="width:80px;display:none">
                    {/if $smarty.get.type eq 4/}
                    <div class="view">
                        <img src="/assets/img/default_{/if $smarty.get.v eq 1/}on{/else/}off{//if/}.png" alt="默认视图" title="默认视图" value="1">
                        <img src="/assets/img/follow_{/if $smarty.get.v eq 2/}on{/else/}off{//if/}.png" alt="跟进视图" title="跟进视图" value="2">
                    </div>
                    {//if/}
                    <div id="configset">
                        <img src="/assets/img/options.png" width="15" height="15"></div>
                    <div id="configset_out">
                        <div id="configset_inner">
                            <form method="post" action="{/str_replace(array('&v=1','&v=2'),'&v=0',$smarty.server.REQUEST_URI)/}">
                                <div><div class="configset_inner_title">属性</div><div class="close">×</div></div>
                                <div class="split"></div>
                                <div style="padding:10px;">
                                    {/foreach from=$allfields key=key item=field/}
                                    <label class="checkbox"><input type="checkbox" name="field[]" value="{/$key/}" {/if $key eq 'title'/}disabled="true"{//if/} {/if in_array($key,$fields_key)/}checked="true"{//if/} isdefault="{/$field.isdefault/}">{/$field.name/}</label>
                                    {//foreach/}
                                </div>
                                <div class="split"></div>
                                <div class="pull-right" style="padding:0 10px 10px 0;"><input type="button" value="恢复默认" class="btn recover">&nbsp;<input type="submit" value="确定" class="btn btn-primary"></div>
                            </form>
                        </div>
                    </div>
                </div>
            </th>
            {//if/}

		</tr>
	</thead>
	{/foreach from=$list item=task/}
	<tr {/if $task.expries_tag eq 1/}class="highlight-bg"{//if/}>
		{/foreach from=$fields key=key item=field/}
		{/if $key eq 'title'/}
			<td title="{/$task.$key/}" class="task-id-{/$task.task_id/}">
				{/if $task.top_order_tag eq 1/}<i class="icon-top-min" title="TOP订单"></i>{//if/}
				{/if $task.is_produced_by_chance eq 1/}<img src="http://cms.zbjimg.com/boss/task/icon_3.png"/>{//if/}
				{/if $task.is_mall gt 0/}<span class="badge  bg-red" style="background:red;" title="优选商城需求">优</span>{//if/}
				{/if $task.recmd_status eq 1/}<span class="badge  bg-red" style="background:red;" title="派单中">派单中</span>{//if/}
				{/if $task.giveuptimetype eq 1/}<span class="order-state order-state-3h" title="跟进不足3h的放弃订单">跟进不足3h的放弃订单</span>{//if/}
				{/if $task.giveuptype eq 1/}<span class="order-state order-state-nocontact" title="未联系上雇主的放弃订单">未联系上雇主的放弃订单</span>{//if/}
				{/if $task.recmd_status eq 2/}<span class="badge  bg-red" style="background:red;" title="已派单">已派单</span>{//if/}
				{/if $task.out_id eq 1/}<span class="badge  bg-red" style="background:red;">包</span>{//if/}
				{/if $task.was_pack gt 0/}<span class="special" title="专场需求"></span>{//if/}
				{/if $task.ht eq 2/}<span class="fair-employ" title="市集雇佣"></span>{//if/}
				{/if $task.isadvc eq 1/}<span class="vip" title="金牌需求"></span>{//if/}
				{/if $task.ht eq 1/}<span class="agent" title="经纪人"></span>{//if/}
				{/if $task.isurgent eq 1/}<span class="badge  bg-red" style="background:red;" title="加急客户">加急客户</span>{/elseif $task.isurgent eq 2/}<span class="badge  bg-red" style="background:red;" title="重点客户">重点客户</span>{//if/}

				<!--招标派单类型-->
				{/if $task.mode eq 13/}
					{/if $task.recmd_type eq 0 and $task.recmd_status neq 0/}
						<span class="badge  bg-red" style="background:red;" title="A类派单">A类派单</span>
					{//if/}
					{/if $task.recmd_type eq 1/}
						<span class="badge  bg-red" style="background:red;" title="B类派单">B类派单</span>
					{//if/}
					{/if $task.recmd_type eq 2/}
						<span class="badge  bg-red" style="background:red;" title="C类派单">C类派单</span>
					{//if/}
				{//if/}

                <a href="/task/lastview-id-{/$task.task_id/}.html" target="_blank"
                                              class="task_title">{/$task.$key|truncate:15/}</a>
