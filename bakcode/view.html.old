function bossReport(type,id,uid) {
	var twid = '';
	if (type=='task') {
		twid = "taskid="+id;
	} else {
		twid = "workid="+id;
	}
	if (!uid) {
	    uid = prompt("请输入要发起举报的用户id", "");
	}
	if (!uid) {
	    return;
	}
	$.ajax({
        type:'POST',
        url: "/report/createtoken?type=1&"+twid+"&userid="+uid,
        dataType:'json',
        success:function(json){
            if(json.state>0){            	
                var signtoken = json.signtoken;
                if(json.taskstatus==1 && type=='works'){
                	$('#wppid').val(id);
                	$('#signtokenp').val(signtoken);
                	$('#speaialform').submit();                	
                }else{
	                var iframeSrc = "{/zbj_lib_Constant::TASK_URL/}/{/$task.task_id/}/?dismode=report&signtoken="+signtoken;
	                if (type != 'task') {
	                	iframeSrc = iframeSrc+"&wid="+id;
	                }
	                $('#report-modal iframe').attr('src',iframeSrc)
	                $('#report-btn').click();
                }
            }else {
                alert(json.msg);
            }
        }
    });
}
