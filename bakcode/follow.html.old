<div class="block-container role-block">
	<div class="block-header">
	    <div class="status-row">
	    {/if $chance.manager_id/}
	    	{/if ($hascase && $chance.paid_amount gt 0) || (!$hascase && $is_all_pay)/}
	    		订单已付款
	    	{/else/}
		    	{/if $follow_info.is_giveup/}
		    		机会等级：已放弃&nbsp;&nbsp;<a href="/copyright/claim?id={/$smarty.get.id/}">1认领</a>
                    &nbsp;&nbsp;<a class="ajaxdialog" href="/copyright/ajax-act-rejectCopyright?id={/$smarty.get.id/}">驳回</a>
			    {/else/}
		    		{/if $follow_info.is_sys eq 1/}
			    		{/assign var="mapping" value="{/$follow_info.sys_level/}"/}
			    	{/else/}
			    		{/assign var="mapping" value="{/$follow_info.level/}"/}
			    	{//if/}
					机会等级：{/$level_desc.$mapping.level/}
					<a href="/chance/follow/id/{/$copyright.chance_id/}.html" class="btn btn-small ajaxdialog">跟进</a>
					<a href="/chance/extendExpireTime/id/{/$copyright.chance_id/}.html" class="btn btn-small ajaxdialog">延长跟进时间</a>
		    	{//if/}
	    	{//if/}
	    {/else/}
			机会等级：未分配
	    {//if/}
	    </div>
	    <p>{/preg_replace('/date/', date('Y-m-d', $follow_info.expire_time), $level_desc.$mapping.remind_con)/}</p>
	</div>
</div>
